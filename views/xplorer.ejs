
<link rel="stylesheet" type="text/css" href="<%= dirName%>/views/css/xplorer.css" media="screen" />

<script>
var selectFolder = function (){
    window.location.href= "/viewer";
};
</script>
<div class="menu">
<div class="button"><span><%= xplorer.dir_path.substr(xplorer.dir_path.lastIndexOf('/')+1)%></span></div>
<div class="button" onclick="selectFolder()"><span>Select this folder</span></div>
</div>
<div>
    <ul>
    <a href="?folder=<%= xplorer.dir_path.substr(0, xplorer.dir_path.lastIndexOf('/'))%>">
        <li class="folder">..</li>
    </a>
    <% if (xplorer.foldertree && xplorer.foldertree.length > 0){ %>
            <% xplorer.foldertree.forEach(function(directory){ %>
        <a href="?folder=<%= directory.url%>">
            <li class="folder"><%= directory.name%></li>
        </a>
    <% }) %>
    <%}else{%>
    
    </ul>
    <span>No images in this folder!</span>
    <%}%>
</div>
<div class="footer">
    <span>[<%= xplorer.imagetree.length%> Images]</span>
</div>


